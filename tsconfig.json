{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@main": ["app/main-components"],
      "@models*": ["app/core/models/*"],
      "@shared*": ["app/shared/*"],
      "@constants*": ["app/core/constants/*"],
      "@services*": ["app/services/*"]
    }
  }
}
